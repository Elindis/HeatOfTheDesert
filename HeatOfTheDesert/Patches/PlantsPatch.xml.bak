<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationAddModExtension">
		<xpath>/Defs/ThingDef[@Name="PlantBase"]</xpath>
		<value>
		<li Class="HeatOfTheDesert.HeatOfTheDesertExtension">
			<diesInHeat>true</diesInHeat>
			<maxOptimalTemperature>14.0</maxOptimalTemperature>
			<deathTemperature>24.0</deathTemperature>
		</li>		
		</value>
	</Operation>
	
	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/ThingDef[@Name="PlantBase"]</xpath>
		<value>
		<thingClass>HeatOfTheDesert.Fragile_Plant</thingClass>
		</value>
	</Operation>

</Patch>

